---
import Layout from "@/layouts/Layout.astro";
import ConceptsSection from "@/components/blog/ConceptsSection.astro";
import SideBar from "@/components/utils/SideBar.astro";
import InsightsSection from "@/components/utils/InsightsSection.astro";
import ContactSection from "@/components/utils/ContactSection.astro";
import eduIcon from "@/assets/edu.svg?raw";
---

<Layout>
  <header id="top" class="mx-auto max-w-7xl px-6 pt-40 pb-12">
    <div class="flex items-start gap-6">
      <span
        class="flex
          h-20 w-20
          shrink-0
          items-center justify-center
          text-primary
          transition
          hover:scale-105"
        set:html={eduIcon}
      />

      <div>
        <h1 class="text-5xl font-bold tracking-tight text-foreground">EDU</h1>
        <p class="mt-2 max-w-2xl text-foreground/70">
          Ideas clave, enfoques y fundamentos que sustentan el trabajo en
          educación, mejora continua y procesos de certificación.
        </p>
      </div>
    </div>
  </header>

  <section class="mx-auto flex max-w-7xl gap-10 px-6 pb-16">
    <SideBar
      items={[
        { label: "Educación", href: "#top" },
        { label: "Conceptos", href: "#conceptos" },
        { label: "Blog", href: "#blog" },
        { label: "Contacto", href: "#contacto" },
      ]}
    />
    <main class="flex-1 space-y-24">
      <section id="conceptos">
        <ConceptsSection />
      </section>

      <section id="blog">
        <InsightsSection />
      </section>

      <section id="contacto">
        <ContactSection />
      </section>
    </main>
  </section>
</Layout>
