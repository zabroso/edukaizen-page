---
import Layout from "@/layouts/Layout.astro";
import SideBar from "@/components/utils/SideBar.astro";
import KaiConceptsSection from "@/components/blog/KaiConceptsSection.astro";
import ContactSection from "@/components/utils/ContactSection.astro";
import kaiIcon from "@/assets/kai.svg?raw";
import CategoryPostsSection from "@/components/utils/CategoryPostsSection.astro";
---

<Layout>
  <header id="top" class="mx-auto max-w-7xl px-6 pt-40 pb-12">
    <div class="flex items-start gap-6">
      <span
        class="flex
          h-20 w-20
          shrink-0
          items-center justify-center
          text-primary
          transition
          hover:scale-105"
        set:html={kaiIcon}
      />

      <div>
        <h1 class="text-5xl font-bold tracking-tight text-foreground">KAI</h1>
        <p class="mt-2 max-w-2xl text-foreground/70">
          Decisiones claras y mejora práctica aplicadas a educación,
          certificaciones y mejora continua.
        </p>
      </div>
    </div>
  </header>

  <section class="mx-auto flex max-w-7xl gap-10 px-6 pb-20">
    <SideBar
      items={[
        { label: "Kai", href: "#top" },
        { label: "Conceptos", href: "#conceptos" },
        { label: "Iniciativas", href: "#iniciativa" },
        { label: "Colaboraciones", href: "#colaboracion" },
        { label: "capsulas", href: "#capsulas" },
        { label: "Contacto", href: "#contacto" },
      ]}
    />

    <main class="flex-1">
      <section id="conceptos">
        <KaiConceptsSection />
      </section>

      <section id="iniciativa">
        <CategoryPostsSection categoria="kai" tag="iniciativa" />
      </section>
      <section id="colaboracion">
        <CategoryPostsSection categoria="kai" tag="colaboracion" />
      </section>
      <section id="capsulas">
        <CategoryPostsSection categoria="kai" tag="capsulas" />
      </section>

      <section id="contacto">
        <ContactSection />
      </section>
    </main>
  </section>
</Layout>
