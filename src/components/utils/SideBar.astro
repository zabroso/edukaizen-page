---
// SideBar.astro
// Componente reutilizable
// Uso: <SideBar items={[{ label: "Inicio", href: "#top" }]} />

export interface NavItem {
  label: string;
  href: string;
}

const { items = [], stickyOffset = "top-24" } = Astro.props as {
  items: NavItem[];
  stickyOffset?: string;
};
---

<aside class="hidden w-64 shrink-0 md:block">
  <nav
    class={`sticky ${stickyOffset} rounded-xl border border-border bg-background/60 p-6 backdrop-blur`}
  >
    <ul class="space-y-4">
      {
        items.map((item) => (
          <li>
            <a
              href={item.href}
              class="block rounded-lg px-3 py-2 text-sm font-medium text-foreground/80 transition
                     hover:bg-foreground/5 hover:text-foreground"
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</aside>
