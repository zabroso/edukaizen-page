---
import eduIcon from "@/assets/edu.svg?raw";
import kaiIcon from "@/assets/kai.svg?raw";
import zenIcon from "@/assets/zen.svg?raw";

const heroIcons = [
  { icon: eduIcon, title: "EDU", text:"Educación, innovación y prácticas que impulsan la mejora continua.", href:"/edu" },
  { icon: kaiIcon, title: "KAI", text:"Gestión estratégica y evolución de procesos liderados por LH.", href:"/kai" },
  { icon: zenIcon, title: "ZEN", text:"Calidad aplicada con rigor en procesos de acreditación.", href:"/zen" },
];
---

<section
  id="home"
  class="relative overflow-hidden py-20 lg:py-28"
>
  <div class="container mx-auto px-4 text-center space-y-20">

    <!-- Icon Grid -->
    <div class="grid grid-cols-1 gap-10 md:grid-cols-3">
      {heroIcons.map((item) => (
        <a
          href={item.href}
          class="group relative flex aspect-square items-center justify-center"
        >
          <!-- Overlay -->
          <div
            class="absolute inset-0 bg-black/50 opacity-0 backdrop-blur-sm transition-all duration-300 group-hover:opacity-100"
          ></div>

          <!-- Icon -->
          <div
            class="
              relative z-10
              text-primary
              transition-all duration-300
              group-hover:scale-90
              group-hover:opacity-20
              group-hover:blur-sm
              w-40 h-40
              md:w-72 md:h-72
            "
          >
            <span
              class="[&>svg]:w-full [&>svg]:h-full [&>svg]:max-w-none"
              set:html={item.icon}
            />
          </div>

          <!-- Hover text -->
          <div
            class="absolute inset-0 flex flex-col items-center justify-center opacity-0 transition-opacity duration-300 group-hover:opacity-100 text-center px-6"
          >
            <span class="font-headline text-2xl font-bold tracking-wider text-foreground">
              {item.title}
            </span>
            <span class="mt-4 text-base text-primary leading-relaxed max-w-xs">
              {item.text}
            </span>
          </div>
        </a>
      ))}
    </div>

    <!-- SEO Content -->
    <div class="max-w-4xl mx-auto space-y-8">
      <h1 class="text-4xl md:text-6xl font-bold tracking-tight leading-tight">
        Consultoría en educación, gestión de procesos y aseguramiento de la calidad
      </h1>

      <p class="text-lg md:text-xl text-foreground/70 leading-relaxed">
        Especialistas en procesos de acreditación, mejora continua y diseño de
        sistemas de gestión para instituciones de educación superior.
        Impulsamos excelencia académica mediante planificación estratégica
        y resultados medibles.
      </p>
    </div>
  </div>
</section>