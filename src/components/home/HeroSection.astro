---
import EduIcon from '@/components/icons/EduIcon.astro';
import KaiIcon from '@/components/icons/KaiIcon.astro';
import ZenIcon from '@/components/icons/ZenIcon.astro';

const heroIcons = [
  { icon: EduIcon, title: 'EDU' },
  { icon: KaiIcon, title: 'KAI' },
  { icon: ZenIcon, title: 'ZEN' },
];
---

<section
  id="home"
  class="relative flex min-h-screen items-center justify-center overflow-hidden py-10 lg:py-32"
>
  <div class="absolute inset-0 -z-20 bg-background"></div>
  <div
    class="absolute inset-0 -z-10 h-full w-full bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(240,128,0,0.15),rgba(255,255,255,0))]"
  ></div>

  <div class="container mx-auto px-4 text-center">
    <div class="mt-16 grid grid-cols-1 gap-8 md:grid-cols-3">
      {heroIcons.map((item) => (
        <a
          href="#"
          class="group relative flex aspect-square items-center justify-center"
        >
          <!-- Contorno siguiendo la silueta de 3 triÃ¡ngulos -->
          <div
            class="absolute flex items-center justify-center transition-all duration-300
                   opacity-0 group-hover:opacity-100
                   bg-black/50 backdrop-blur-sm"
            
          ></div>

          <!-- Icono -->
          <div
            class="relative z-10 text-primary blur-0 transition-all duration-300
                   group-hover:scale-90 group-hover:opacity-20 group-hover:blur-sm"
          >
            <item.icon class="h-28 w-28" />
          </div>

          <!-- Texto hover -->
          <div
            class="absolute inset-0 flex flex-col items-center justify-center
                   opacity-0 transition-opacity duration-300 group-hover:opacity-100"
          >
            <span class="font-headline text-2xl font-bold tracking-wider text-foreground">
              {item.title}
            </span>
            <span
              class="mt-2 text-lg font-semibold text-primary underline underline-offset-4"
            >
              go to blog
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
