const PlaceHolderImages = [
    {
      "id": "ia-educacion",
      "description": "A futuristic image representing artificial intelligence in an educational context.",
      "imageUrl": "https://images.unsplash.com/photo-1591696331111-ef9586a5b17a?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NDE5ODJ8MHwxfHNlYXJjaHwxMHx8YXJ0aWZpY2lhbCUyMGludGVsbGlnZW5jZSUyMGVkdWNhdGlvbnxlbnwwfHx8fDE3Njk1NDkyNTJ8MA&ixlib=rb-4.1.0&q=80&w=1080",
      "imageHint": "artificial intelligence education"
    },
    {
      "id": "optimizacion-aula",
      "description": "A modern, optimized classroom with technology.",
      "imageUrl": "https://images.unsplash.com/photo-1577896851231-70ef18881754?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NDE5ODJ8MHwxfHNlYXJjaHwxfHxtb2Rlcm4lMjBjbGFzc3Jvb218ZW58MHx8fHwxNzY5NDQ5MjEyfDA&ixlib=rb-4.1.0&q=80&w=1080",
      "imageHint": "modern classroom"
    },
    {
      "id": "optimizacion-procesos",
      "description": "An abstract representation of process optimization with flowcharts and graphs.",
      "imageUrl": "https://images.unsplash.com/photo-1591381287254-b3349c60bf9b?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3NDE5ODJ8MHwxfHNlYXJjaHwxMHx8d29ya2Zsb3clMjBjaGFydHxlbnwwfHx8fDE3Njk1MzA0MjF8MA&ixlib=rb-4.1.0&q=80&w=1080",
      "imageHint": "workflow chart"
    }
  ]

const imageMap = new Map(PlaceHolderImages.map((p) => [p.id, p]));
---

<section id="blog" class="bg-card/20 py-20 lg:py-32">
  <div class="container mx-auto px-4">
    <div class="mb-12 text-center">
      <h2 class="font-headline text-4xl font-bold tracking-tight sm:text-5xl">
        Insights & Contenido
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-muted-foreground">
        Explora nuestras ideas sobre tecnología, educación y mejora continua.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {insights.map((insight) => {
        const imageData = imageMap.get(insight.id);

        return (
          <a href="#" class="block">
            <article
              class="flex h-full flex-col overflow-hidden rounded-lg border border-border bg-card transition-all duration-300 hover:-translate-y-2 hover:border-primary/50 hover:shadow-lg hover:shadow-primary/10"
            >
              {imageData && (
                <div class="aspect-video overflow-hidden">
                  <img
                    src={imageData.imageUrl}
                    alt={imageData.description}
                    loading="lazy"
                    data-ai-hint={imageData.imageHint}
                    class="h-full w-full object-cover transition-transform duration-300 hover:scale-105"
                  />
                </div>
              )}

              <div class="flex flex-1 flex-col p-6">
                <span class="mb-2 w-fit rounded-md bg-primary/10 px-2 py-1 text-sm font-medium text-primary">
                  {insight.category}
                </span>

                <h3 class="font-headline text-xl font-semibold">
                  {insight.title}
                </h3>

                <p class="mt-2 line-clamp-3 text-muted-foreground">
                  {insight.description}
                </p>

                <div class="mt-auto pt-4">
                  <p class="text-sm text-muted-foreground">
                    {insight.date}
                  </p>
                </div>
              </div>
            </article>
          </a>
        );
      })}
    </div>
  </div>
</section>
