---
const navLinks = [
  { name: "Inicio", href: "#home" },
  { name: "Edu", href: "#blog" },
  { name: "Kai", href: "#blog" },
  { name: "Zen", href: "#blog" },
  { name: "Contacto", href: "#contact" },
];
---

<header class="fixed top-0 inset-x-0 z-50 bg-background/80 backdrop-blur border-b border-white/10">
  <div class="container h-20 flex items-center justify-between">
    <a href="/" class="font-headline text-3xl font-bold">EduKaizen</a>

    <nav class="hidden md:flex gap-8">
      {navLinks.map(link => (
        <a href={link.href} class="text-muted hover:text-primary">
          {link.name}
        </a>
      ))}
    </nav>

    <!-- Mobile toggle simple -->
    <button id="menuBtn" class="md:hidden">☰</button>
  </div>
</header>

<script>
  const btn = document.getElementById("menuBtn");
  btn?.addEventListener("click", () => {
    alert("Aquí puedes implementar menú móvil o usar React");
  });
</script>
